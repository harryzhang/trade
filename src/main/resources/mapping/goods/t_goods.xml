<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.redpack.goods.dao.IGoodsDao">
	<resultMap type="goodsDo" id="goodsResultMap">
		<result property="goodsId" column="goodsId" />
		<result property="gname" column="gName" />
		<result property="gdesc" column="gDesc" />
		<result property="status" column="status" />
		<result property="gcode" column="gCode" />
		<result property="gcate" column="gCate" />
		<result property="gunite" column="gUnite" />
		<result property="price" column="price" />
		<result property="gkind" column="gkind" />
		<result property="createTime" column="createTime" />
	</resultMap>

	<select id="getById" parameterType="Long" resultMap="goodsResultMap">
		SELECT * 
		  FROM t_goods WHERE goodsId = #{goodsId}
	</select>

	<select id="selectGoods" parameterType="Map" resultMap="goodsResultMap">
		SELECT * 
		  FROM t_goods
		  <trim prefix="WHERE" prefixOverrides="AND |OR "> 
			<if test="goodsId != null">  
				AND goodsId = #{goodsId}
			</if>
			<if test="gname != null">  
				AND gName = #{gname}
			</if>
			<if test="gdesc != null">  
				AND gDesc = #{gdesc}
			</if>
			<if test="status != null">  
				AND status = #{status}
			</if>
			<if test="gcode != null">  
				AND gCode = #{gcode}
			</if>
			<if test="gcate != null">  
				AND gCate = #{gcate}
			</if>
			<if test="gunite != null">  
				AND gUnite = #{gunite}
			</if>
			<if test="price != null">  
				AND price = #{price}
			</if>
			<if test="gkind != null">  
				AND gkind = #{gkind}
			</if>
			<if test="createTime != null">  
				AND createTime = #{createTime}
			</if>
         </trim> 

	</select>
	
	<update id="updateGoodsById" parameterType="goodsDo">
		UPDATE t_goods 
		<trim prefix="SET" suffixOverrides=","> 
		<if test="gname != null">  
				gName = #{gname},
		</if>				
		<if test="gdesc != null">  
				gDesc = #{gdesc},
		</if>				
		<if test="status != null">  
				status = #{status},
		</if>				
		<if test="gcode != null">  
				gCode = #{gcode},
		</if>				
		<if test="gcate != null">  
				gCate = #{gcate},
		</if>				
		<if test="gunite != null">  
				gUnite = #{gunite},
		</if>				
		<if test="price != null">  
				price = #{price},
		</if>				
		<if test="gkind != null">  
				gkind = #{gkind},
		</if>				
		<if test="createTime != null">  
				createTime = #{createTime},
		</if>				
		</trim>
		WHERE goodsId = #{goodsId} 
	</update>	
	
	<insert id="addGoods" parameterType="goodsDo" keyProperty="id"
		useGeneratedKeys="true" >
		INSERT INTO t_goods(		gName
		,gDesc
		,status
		,gCode
		,gCate
		,gUnite
		,price
		,gkind
		,createTime
)
		     VALUES (		#{gname}
		,#{gdesc}
		,#{status}
		,#{gcode}
		,#{gcate}
		,#{gunite}
		,#{price}
		,#{gkind}
		,#{createTime}
)
	</insert>
	
	<delete id="deleteById" parameterType="Long" >
		DELETE FROM t_goods WHERE goodsId = #{goodsId}
	</delete>
	
</mapper>

